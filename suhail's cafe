  <script>
    const menuData = {
      Burgers: [
        { name: 'Classic Chicken Burger', price: 180 },
        { name: 'Veggie Delight Burger', price: 150 },
        { name: 'Cheese Burst Burger', price: 200 }
      ],
      Sandwiches: [
        { name: 'Grilled Cheese Sandwich', price: 130 },
        { name: 'Chicken Club Sandwich', price: 160 },
        { name: 'Veg Sandwich', price: 120 }
      ],
      Coffee: [
        { name: 'Cappuccino', price: 160 },
        { name: 'Cold Coffee', price: 180 },
        { name: 'Espresso', price: 140 }
      ],
      Tea: [
        { name: 'Masala Chai', price: 50 },
        { name: 'Green Tea', price: 70 },
        { name: 'Lemon Tea', price: 60 }
      ],
      'Jumbo Roll': [
        { name: 'Chicken Jumbo Roll', price: 200 },
        { name: 'Paneer Jumbo Roll', price: 180 },
        { name: 'Egg Roll', price: 150 }
      ]
    };

    const cart = new Map();
    const cartCount = document.getElementById('cartCount');
    const cartTotal = document.getElementById('cartTotal');
    const cartDrawer = document.getElementById('cartDrawer');
    const overlay = document.getElementById('drawerOverlay');
    const cartItems = document.getElementById('cartItems');
    const orderSuccess = document.getElementById('orderSuccess');

    const menuContainer = document.getElementById('menuList');

    for (const [category, items] of Object.entries(menuData)) {
      const section = document.createElement('div');
      section.className = 'menu-category';
      section.innerHTML = <h3>${category}</h3>;

      items.forEach(({ name, price }) => {
        const div = document.createElement('div');
        div.className = 'menu-item';
        div.dataset.name = name;
        div.dataset.price = price;
        div.innerHTML = `
          <div>
            <h4 class="item-title">${name}</h4>
            <span class="price">â‚¹${price}</span>
          </div>
          <div class="controls">
            <button class="add-btn">Add</button>
            <div class="stepper">
              <button class="dec">âˆ’</button>
              <input type="number" value="1" min="1" class="qty">
              <button class="inc">+</button>
            </div>
          </div>`;
        section.appendChild(div);
      });
      menuContainer.appendChild(section);
    }

    function updateCart() {
      let total = 0, count = 0;
      cartItems.innerHTML = '';
      cart.forEach(({ qty, price }, name) => {
        total += qty * price;
        count += qty;
        const div = document.createElement('div');
        div.className = 'cart-item';
        div.innerHTML = <span>${name} Ã— ${qty}</span><span>â‚¹${qty * price}</span>;
        cartItems.appendChild(div);
      });
      cartTotal.textContent = total;
      cartCount.textContent = count;
    }

    function resetMenu() {
      document.querySelectorAll('.menu-item').forEach(item => {
        const addBtn = item.querySelector('.add-btn');
        const stepper = item.querySelector('.stepper');
        const qtyInput = stepper.querySelector('.qty');
        qtyInput.value = 1;
        stepper.classList.remove('visible');
        addBtn.style.display = 'inline-block';
      });
    }

    document.querySelectorAll('.menu-item').forEach(item => {
      const addBtn = item.querySelector('.add-btn');
      const stepper = item.querySelector('.stepper');
      const dec = stepper.querySelector('.dec');
      const inc = stepper.querySelector('.inc');
      const qtyInput = stepper.querySelector('.qty');
      const name = item.dataset.name;
      const price = +item.dataset.price;

      addBtn.addEventListener('click', () => {
        addBtn.style.display = 'none';
        stepper.classList.add('visible');
        cart.set(name, { qty: 1, price });
        updateCart();
      });

      inc.addEventListener('click', () => {
        let qty = +qtyInput.value + 1;
        qtyInput.value = qty;
        cart.set(name, { qty, price });
        updateCart();
      });

      dec.addEventListener('click', () => {
        let qty = +qtyInput.value - 1;
        if (qty <= 0) {
          stepper.classList.remove('visible');
          addBtn.style.display = 'inline-block';
          cart.delete(name);
          qty = 1;
        }
        qtyInput.value = qty;
        updateCart();
      });
    });

    document.getElementById('openCart').onclick = () => {
      cartDrawer.classList.add('open');
      overlay.classList.add('open');
    };
    document.getElementById('closeCart').onclick = () => {
      cartDrawer.classList.remove('open');
      overlay.classList.remove('open');
    };
    overlay.onclick = () => {
      cartDrawer.classList.remove('open');
      overlay.classList.remove('open');
    };

    document.getElementById('clearCart').onclick = () => {
      cart.clear();
      updateCart();
    };

    document.getElementById('placeOrder').onclick = () => {
      document.getElementById('deliveryForm').style.display = 'block';
    };

    document.getElementById('payNow').onclick = () => {
      const popup = document.getElementById('paymentPopup');
      popup.style.display = 'block';
      setTimeout(() => {
        popup.innerHTML = '<h3>âœ… Payment Successful!</h3><p>Thank you for your order.</p>';
        setTimeout(() => {
          popup.style.display = 'none';
          const name = document.getElementById('custName').value.trim();
          const address = document.getElementById('custAddress').value.trim();
          const phone = document.getElementById('custPhone').value.trim();
          alert(Order placed successfully!\nName: ${name}\nAddress: ${address}\nPhone: ${phone});
          cart.clear();
          updateCart();
          resetMenu();
          document.getElementById('deliveryForm').style.display = 'none';
          popup.innerHTML = '<h3>Processing Payment...</h3><p>Please wait while we complete your transaction.</p>';
          orderSuccess.style.display = 'block';
          setTimeout(() => orderSuccess.style.display = 'none', 3000);
        }, 2000);
      }, 1500);
    };
  </script>
</body>
